  if(sucesso == "true" || sucesso == "false") {
    showHideStep("auto", 5, 5);
    $("#info_step_4").css("color", "#0291C9");
  } else {
    showHideStep("auto", 5, 1);
  }

  // Configurações iniciais
  $('html, body').animate({ scrollTop: 500 }, 'slow');
