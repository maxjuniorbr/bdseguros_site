  $('input:text').setMask();
  validate(["#quote"]);
  
  // Bloqueia a tecla enter no form
  blockEnter("#quote_form");

  // Dicas tipo balloon
  tipTip("#quote_number_home", "Informe a identificação completa da sua residência. Ex. 255, apto 10, 2ª andar.", "focus");
